fi
#echo $LD_LIBRARY_PATH

export TEST_SRC_PATH=/home/scec-00/mei/UCVM_REVIEW/UCVMC_TEST/hpc/ucvm2mesh

###############################################################################

cd /scratch
cp ${TEST_SRC_PATH}/ucvm2mesh.conf .
cp ${UCVM_INSTALL_PATH}/bin/ucvm2mesh .

./ucvm2mesh -f ucvm2mesh.conf

echo "Job done"
exit 0
